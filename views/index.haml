%section
  %form{:action => "/", :method => "post", :name => "value_form"}
    %h2
      Achievement Percentage &#40;&#37;&#41;
    %input{:name => "message", :type => "number", :step => "any"}
      %input{:type => "submit", :value => "Calculate"}
%section
  %div{:class => "section group"}
    %h3
      Payout Percentage &#40;&#37;&#41;
    - @curves.each do |k,v|
      %div{:class => "col span_1_of_8"}
        = "<h4>#{k}</h4>"
        %input#payout_val{:name => "payout_val", :type => "text", :value => @val_pts[k]}